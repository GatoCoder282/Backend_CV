# Configuración de Base de Datos (Por defecto SQLite para desarrollo)
DATABASE_URL="sqlite:///./portfolio.db"

# Seguridad (JWT) - ¡Cambia esto en producción!
# Puedes generar uno seguro corriendo en terminal: openssl rand -hex 32
SECRET_KEY="your-secret-key-here"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SUPERADMIN - Email del superadministrador (acceso total al sistema)
# Este usuario tendrá rol SUPERADMIN automáticamente al registrarse
SUPERADMIN_EMAIL="your-email@example.com"

# Entorno (dev / prod)
ENVIRONMENT="dev"

# Cloudinary - Servicio de almacenamiento de imágenes
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
